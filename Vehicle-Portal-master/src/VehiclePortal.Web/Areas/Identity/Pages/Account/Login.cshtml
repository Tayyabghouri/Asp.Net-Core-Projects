@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    
</style>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12" ">
        <section>
            @using (Html.BeginForm( FormMethod.Post))
{
            <form id="account" >
                <h4 style="margin-left: 30%;">Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.VehiclePortalusername"></label>
                    <input asp-for="Input.VehiclePortalusername" class="form-control" />
                    <span asp-validation-for="Input.VehiclePortalusername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-warning text-light" style="background-color: darkorange">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
       }
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
